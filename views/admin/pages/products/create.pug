extends ../../layouts/default.pug

block main

    
    form(action=`${prefixAdmin}/products/create` method="POST" enctype="multipart/form-data" class="container container-sm mt-5") 
        - if(message.error)
            span(class='alert alert-danger msg-box' role='alert') #{message.error} 
                i(class='bi bi-x-lg')
                
        h2 Thêm Sản Phẩm Mới
        .row
            .col-md-6
                .form-group
                    label(for="title") Tiêu đề
                    input(type="text" class="form-control" id="title" name="title" )
            .col-md-6
                .form-group
                    label(for="category_id") Danh mục
                    select(class="form-control" id="category_id" name="category_id")
                        option(value="" disabled selected) -- Chọn danh mục --
                        option(value="IOS") IOS
                        option(value="PC") PC
                        option(value="Laptop") Laptop
                        option(value="Iphone") Iphone
                        
        //- .form-group.form-check.form-check-inline
        //-     input(type="radio" class="form-check-input" id="featured1" name="featured" value="1")
        //-     label(for="featured1" class="form-check-label") Nổi bật
        //- .form-group.form-check.form-check-inline
        //-     input(type="radio" class="form-check-input" id="featured0" name="featured" value="0" checked)
        //-     label(for="featured0" class="form-check-label") Không nổi bật
        .form-group
            label(for="rating") Mô tả
            input(class="form-control" type="number" id="rating" name="rating" placeholder="Nhập rating")
        .form-group
            label(for="price") Giá
            input(type="number" class="form-control" id="price" name="price" value="0" min="0" placeholder="Nhập giá sản phẩm")
        .form-group
            label(for="discount") % Giảm giá
            input(type="number" class="form-control" id="discount" name="discountPercentage" value="0" min="0" placeholder="Nhập phần trăm giảm giá")
        .form-group
            label(for="stock") Số lượng
            input(type="number" class="form-control" id="stock" name="stock" value="0" min="0" placeholder="Nhập số lượng sản phẩm")
        .form-group
            label(for="thumbnail") Ảnh
            input(type="file" class="form-control-file" id="thumbnail" name="thumbnail" accept="image/*")
            img(src="" class="image-preview mt-3" style="max-width: 100%; aspect-ratio: 2/1;")
        .form-group
            label(for="position") Vị trí
            input(type="number" class="form-control" id="position" name="position" placeholder="Tự động tăng" min="1")
        .form-group.form-check.form-check-inline
            input(type="radio" class="form-check-input" id="statusActive" name="status" value="active" checked)
            label(for="statusActive" class="form-check-label") Hoạt động
        .form-group.form-check.form-check-inline
            input(type="radio" class="form-check-input" id="statusInActive" name="status" value="disable")
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        .form-group
            button(type="submit" class="btn btn-primary btn-block") Thêm sản phẩm
